class Solution {
    public boolean isPalindrome(int n) {
        int sum =0;
        int k = n;
        // Code here
        while(n>0){
            int rem = n%10;
            sum=sum*10+rem;
            n=n/10;
        }
        if(sum==k){
            return true;
        }else{
            return false;
        }
    }
}
